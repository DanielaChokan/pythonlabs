n = int(input ("Введіть значення n: "))

while (n < 1 or n > 9):

    n = int(input ("Введіть ще раз значення n: "))

for i in range(1, n + 1):
    num = n + 1 - i
    k = n - num
    while(k > 0):
        print(' ',end = ' ')
        k -= 1
    for j in range(n, 0, -1):
        if j >= i:
            print(num,  end = ' ')
            num -= 1
    print()
